- if current_user && current_user.id == session[:user_id]
  Authorize like #{current_user.email} //
  = link_to 'Sign out', log_out_path
  = link_to 'All Posts', posts_index_path
  = link_to 'My Posts', posts_my_post_path
  = link_to 'New post', new_user_post_path(current_user.id)
- else
  = link_to 'Sign up', sign_up_path
  = link_to 'Sign in', sign_in_path