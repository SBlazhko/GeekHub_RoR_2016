<table>
  <thead>
    <th>Name</th>
    <th>Weight</th>
    <th>Price</th>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.name %>
        </td>
        <td>
          <%= product.weight %>
        </td>
        <td>          
          <%= product.price %>
        </td>
        <td>
          <%= link_to 'Show', product %>
        </td>
        <td>
          <%= link_to 'Edit', edit_product_path(product) %>
        </td>
        <td>
          <%= link_to 'Destroy', product_path(product), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Create New product", new_product_path %>