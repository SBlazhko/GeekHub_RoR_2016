<table>
  <thead>
    <th>Name</th>
    <th>Type</th>
    <th>Price</th>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td>
          <%= car.name %>
        </td>
        <td>
          <%= car.car_type %>
        </td>
        <td>
          <%= car.price %>
        </td>
        <td>
          <%= link_to 'Show', car %>
        </td>
        <td>
          <%= link_to 'Edit', edit_car_path(car) %>
        </td>
        <td>
          <%= link_to 'Destroy', car_path(car), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Create New Car", new_car_path %>
