<table>
  <thead>
    <th>Name</th>
    <th>Autor</th>
    <th>Pages</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.name %>
        </td>
        <td>
          <%= book.autor %>
        </td>
        <td>
          <%= book.pages %>
        </td>
        <td>
          <%= link_to 'Show', book %>
        </td>
        <td>
          <%= link_to 'Edit', edit_book_path(book) %>
        </td>
        <td>
          <%= link_to 'Destroy', book_path(book), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Create New Book", new_book_path %>
