/ Modal
#productDialog.modal.fade{:role => "dialog"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title Import products
      .modal-body
        = form_tag import_products_path, multipart: true do
          .form-inlne
            .form-group
              .input-group
                = file_field_tag :products_csv
            .form-group
              .input-group
                = submit_tag "Upload", class: "btn btn-primary"
